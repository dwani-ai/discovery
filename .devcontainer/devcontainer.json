{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  
  "postCreateCommand": "pip install jupyterlab",

  "forwardPorts": [8888],

  "onCreateCommand": "jupyter lab --ip=0.0.0.0 --port=8888 --no-browser --allow-root",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter"
      ]
    }
  },

  "portsAttributes": {
    "8888": {
      "label": "Jupyter Lab",
      "onAutoForward": "openBrowser"
    }
  }
}
